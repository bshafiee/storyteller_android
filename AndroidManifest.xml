<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="behsaman.storytellerandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="behsaman.storytellerandroid.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="behsaman.storytellerandroid.NewfeedActivity"
            android:label="@string/title_activity_newfeed" >
        </activity>
        <activity
            android:name="behsaman.storytellerandroid.NewsfeedActivity"
            android:label="@string/title_activity_customized_list_view" >
        </activity>
        <activity
            android:name="behsaman.storytellerandroid.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="behsaman.storytellerandroid.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="behsaman.storytellerandroid.NewStoryActivity"
            android:label="@string/title_activity_new_story" >
        </activity>
        <activity
            android:name="behsaman.storytellerandroid.TextPieceActivity"
            android:label="@string/title_activity_text_piece" >
        </activity>
        <activity
            android:name="behsaman.storytellerandroid.StoryPageActivity"
            android:label="@string/title_activity_story_page" >
        </activity>
        <activity
            android:name="behsaman.storytellerandroid.AudioPieceActivity"
            android:label="@string/title_activity_audio_piece" >
        </activity>
        <activity
            android:name="behsaman.storytellerandroid.TextviewerSlideActivity"
            android:label="@string/title_activity_textviewer" >
        </activity>
        <activity
            android:name="behsaman.storytellerandroid.AudiostoryPlayerActivity"
            android:label="@string/title_activity_audiostory_player" >
        </activity>
        <activity
            android:name="behsaman.storytellerandroid.videoplayer.VideoPlayerActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="behsaman.storytellerandroid.VideoPieceActivity"
            android:label="@string/title_activity_video_piece" >
        </activity>
    </application>

</manifest>